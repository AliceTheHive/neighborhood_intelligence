div(ng-controller="HeatmapController" ng-swipe-right="onSwipeRight($event)" ng-swipe-left="onSwipeLeft($event)").font-color.fade-in
  h1.title.fade-in: a(ng-href="#/") Precog
  h2.sub-title.fade-in neighborhood intelligence

  div.stage(ng-class="user.riskLevel")
  div.loading(ng-show="loading")

  br
  div.risk-level.fade-in(ng-class="{offscreen : !init}")
    h2.risk-label City Heatmap -- Coming Soon

  .heatmap
    div(ng-map zoom="7" center="{{user.lat}},{{user.lng}}" ng-if="user.lat")
      fusion-tables-layer(query="{ select: 'lat', from: '{{mapKey[hour]}}'}", heatmap = "{enabled: true}")
    div(ng-map zoom="7" center="33.45,-112.02" ng-if="!user.lat"),heatmap = "{enabled: true}")
      fusion-tables-layer(query="{ select: 'lat', from: '{{mapKey[hour]}}'}", heatmap = "{enabled: true}")

