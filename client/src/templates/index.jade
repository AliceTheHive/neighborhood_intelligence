extends ./layouts/layout

block vars
  -var page = 'home'
  -var bgLow= 'index'
block title
  title Phoenix Precog - A geospatial crime app

block content
  div(ng-view)
  span(ng-controller="IndexController" class="pager fade-in" ng-show="user.lat" ng-cloak)
    span.center
      a(href="/"): i.fa.fa-circle(ng-class="{ 'active': location =='/' }")
      a(href="/more"): i.fa.fa-circle(ng-class="{ 'active': location =='/more' }")
      a(href="/type"): i.fa.fa-circle(ng-class="{ 'active': location =='/type' }")
      a(href="/heatmap"): i.fa.fa-circle(ng-class="{ 'active': location =='/heatmap' }")
    
 